{% extends '::base.html.twig' %}

{% form_theme profileForm '@Portfolio/Form/purecss_layout.html.twig' %}

{% block content %}
    <h1>Update Profile</h1>
    {{ form_start(profileForm) }}
    <div class="pure-controls profile-success">
    {% for message in app.flashes('success-profile') %}
        <div class="pure-form-message success">{{ message }}</div>
    {% endfor %}
    </div>
    {{ form_row(profileForm.email) }}
    {{ form_row(profileForm.username) }}
    {{ form_row(profileForm.name) }}
    {{ form_end(profileForm) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
.profile-success:not(:empty) {
    margin-bottom: 1.5rem;
}
    </style>
{% endblock %}